# FieldForge Environment Configuration
# Copy to .env and fill in values

# ── Database ──
DATABASE_URL=postgres://fieldforge:fieldforge@localhost:5432/fieldforge
DATABASE_MAX_CONNECTIONS=20
DATABASE_MIN_CONNECTIONS=5

# ── Redis ──
REDIS_URL=redis://localhost:6379

# ── API Server ──
API_HOST=0.0.0.0
API_PORT=8080
API_ENV=development
RUST_LOG=fieldforge_api=debug,tower_http=debug

# ── Auth ──
JWT_SECRET=change-me-in-production-use-64-char-random-string
JWT_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=30

# ── Stripe ──
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ── Twilio ──
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...

# ── SendGrid ──
SENDGRID_API_KEY=SG...
SENDGRID_FROM_EMAIL=noreply@fieldforge.com

# ── Storage (S3-compatible) ──
S3_BUCKET=fieldforge-uploads
S3_REGION=us-east-1
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# ── Meilisearch ──
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_API_KEY=masterKey

# ── AI Service ──
AI_SERVICE_URL=http://localhost:8000
OPENAI_API_KEY=sk-...

# ── Google Maps ──
GOOGLE_MAPS_API_KEY=...

# ── Web App ──
PUBLIC_API_URL=http://localhost:8080
PUBLIC_WS_URL=ws://localhost:8080/ws
