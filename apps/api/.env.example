# FieldForge API â€” Environment Variables
# Copy to .env and configure

# Server
HOST=0.0.0.0
PORT=8080
RUST_LOG=info,fieldforge_api=debug

# Database (PostgreSQL 16)
DATABASE_URL=postgres://fieldforge:fieldforge@localhost:5432/fieldforge

# Redis
REDIS_URL=redis://localhost:6379

# JWT Auth
JWT_SECRET=change-me-to-a-secure-random-string
JWT_EXPIRY_HOURS=24

# S3 / MinIO (file uploads)
S3_BUCKET=fieldforge-uploads
S3_REGION=us-east-1
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# Stripe (payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@fieldforge.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Meilisearch (full-text search)
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_KEY=masterKey

# AI Service
AI_SERVICE_URL=http://localhost:8000

# Environment
ENV=development
