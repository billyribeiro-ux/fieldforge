# FieldForge AI Service â€” Environment Variables
# Copy to .env and configure

# Server
ENV=development
HOST=0.0.0.0
PORT=8000

# Database (read-only access to main DB)
DATABASE_URL=postgres://fieldforge:fieldforge@localhost:5432/fieldforge

# Redis
REDIS_URL=redis://localhost:6379

# S3 / MinIO (photo access)
S3_BUCKET=fieldforge-uploads
S3_REGION=us-east-1
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# OpenAI (for assistant / embeddings)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# ML Model Paths
MODEL_PATH=./models
PHOTO_ESTIMATION_MODEL=photo_estimation_v1.onnx
SCHEDULING_MODEL=scheduling_v1.onnx

# API Service URL (main Rust API)
API_SERVICE_URL=http://localhost:8080/api/v1
